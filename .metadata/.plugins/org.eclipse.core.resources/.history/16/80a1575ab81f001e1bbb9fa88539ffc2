package com.aurionpro.test;

import com.aurionpro.model.Color;

import com.aurionpro.model.Rectangle;
import java.util.Scanner;

public class RectangleTest {

	public static void main(String[] args) {
		
		Rectangle r1 = new Rectangle();
		setRectangleValues(r1);
		printRectangleValues(r1);
		
	}
	 public static void setRectangleValues(Rectangle r1) {
  	   Scanner sc = new Scanner(System.in);
  	   r1.setHeight(sc.nextDouble());
         r1.setWidth(sc.nextDouble());
         
         try {
         	r1.setColour(Color.valueOf(sc.next().toUpperCase()));
         }
         
         catch(Exception e) {
         	r1.setColour(Color.RED);
         }
     }
	 public static void printRectangleValues(Rectangle r1) {
		 System.out.println(r1.getHeight() * r1.getWidth() + " The colour is: "+ r1.getColour());
	 }

}
